<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 在继承Theme.AppCompat.Light.DarkActionBar基础上,做处理-->
    <!-- 1. 防止app启动时,出现白屏或者黑屏，设置一张图片 -->
    <style name="Theme.MyAppTheme" parent="BaseAppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_cold_start</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--缓冲页面-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
        <!--悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--不需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--允许模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--全屏幕-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- App字体列表 -->
    <style name="font_size1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="font_size2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_size3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="font_size4">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="font_size5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_size6">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 页面上一级文字 -->
    <style name="page_label_big" parent="@style/font_size6">
        <item name="android:textColor">#333333</item>
    </style>

    <!-- 二级banner -->
    <style name="banner_child" parent="@style/font_size1">
        <item name="android:textColor">#4e604c</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- 多选弹窗上标题中的文字 -->
    <style name="dialog_tv_title" parent="@style/font_size2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ListView上每个item的背景色 -->
    <style name="listview_bg_item">
        <item name="android:background">@color/bg_lv_item</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 多选弹窗上每个item中的文字 -->
    <style name="dialog_tv_item" parent="@style/font_size4">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 每个导航页的条目  最左侧一栏图片 -->
    <style name="system_title_all">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/bg_select_white_gray</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:visibility">visible</item>
    </style>

    <!-- 每个导航页的条目  最左侧一栏图片 -->
    <style name="system_title_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 每个导航页的条目  最左侧一栏图片 文字-->
    <style name="system_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/color_cccccc</item>
    </style>

    <style name="BaseTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
