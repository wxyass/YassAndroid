<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 在继承Theme.AppCompat.Light.DarkActionBar基础上,做处理-->
    <!-- 1. 防止app启动时,出现白屏或者黑屏，设置一张图片 -->
    <style name="Theme.MyAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/ico_guide_page_o</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--缓冲页面-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
        <!--悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--不需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--允许模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--全屏幕-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- App字体列表 -->
    <style name="font_size1">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="font_size2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_size3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="font_size4">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="font_size5">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="font_size6">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 多选弹窗上标题中的文字 -->
    <style name="dialog_tv_title" parent="@style/font_size2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ListView上每个item的背景色 -->
    <style name="listview_bg_item">
        <item name="android:background">@color/bg_lv_item</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 多选弹窗上每个item中的文字 -->
    <style name="dialog_tv_item" parent="@style/font_size4">
        <item name="android:textColor">#000000</item>
    </style>


</resources>
